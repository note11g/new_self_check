<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.New_Self_Check" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint_300</item>
        <item name="colorPrimaryVariant">@color/mint_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint_300</item>
        <item name="colorSecondaryVariant">@color/mint_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NumPadButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="selectButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">?attr/colorOnSecondary</item>
    </style>
</resources>